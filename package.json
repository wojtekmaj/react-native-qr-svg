{
  "name": "@wojtekmaj/react-native-qr-svg-monorepo",
  "version": "1.0.0",
  "description": "@wojtekmaj/react-native-qr-svg monorepo",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspace @wojtekmaj/react-native-qr-svg build",
    "dev": "yarn workspace @wojtekmaj/react-native-qr-svg watch",
    "format": "yarn workspaces foreach --all run format",
    "lint": "yarn workspaces foreach --all run lint",
    "postinstall": "husky",
    "test": "yarn workspaces foreach --all run test",
    "tsc": "yarn workspaces foreach --all run tsc",
    "unit": "yarn workspaces foreach --all run unit"
  },
  "devDependencies": {
    "husky": "^9.0.0"
  },
  "packageManager": "yarn@4.1.1"
}
